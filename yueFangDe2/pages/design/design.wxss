/* pages/design/design.wxss */
.img{
  width: 750rpx;
  height: 360rpx;
  display: block;
}
.main{
  margin-top: -5px;
  background: #F0F0F0;
  padding: 10px 15px 5px;
}
.main>view{
  padding: 5px 10px 10px;
  background: #fff;
  border-radius: 3px;
  margin-bottom: 10px;
}

.title{
  color: #0C0C0C;
  font-size: 15px;
  padding: 5px 0;
}
.con{
  color: #2F2F2F;
  font-size: 12px;
}
.main .borders,.bordery{
  margin: 0px 0 10px;
  width: 30px;
  border-bottom: 2px solid #4A94FF;
}
.bordery{
  border-bottom: 2px solid #FFD74A;
}

.head{
  text-align: center;
}
image{
  width: 50vw;
  height: 8vh;
  margin-bottom: 15px;
}
.head .step{
  width: 100%;
  height: 15vh;
  display: flex;
  justify-content: space-around;
}
.step>view{
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  align-items: center;
}
.borderb{
  border-top: 1px solid #000;
  width: 40px;
  margin-top: 8vw;
}
.step>view>view:nth-of-type(1){
  color:#fff;
  font-size: 24px;
  height: 40px;
  width: 40px;
  line-height: 40px;
  text-align: center;
  border-radius: 50%;
  background: #62A2FF;
  font-weight: normal;
}
.step>view>view:nth-of-type(2){
  color: #0B0B0B;
  font-size:11px;
}


.foot{
  padding: 15px;
}
.foot button{
  background: #4A94FF;
  font-size: 14px;
}
