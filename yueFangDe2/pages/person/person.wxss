/* pages/person/person.wxss */
.placeholder{
  font-size: 28rpx;
  color: #111;
}
.head{
  position: relative;

}
image{
  width: 100%;
  height: 20vh;
}
.head .step{
  position: absolute;
  width: 90%;
  height: 15vh;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  margin: auto;
  display: flex;
  justify-content: space-around;
}
.step>view{
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  align-items: center;
}
.step .s1>view:nth-of-type(1){
  color:#FFB488;
  font-size: 48rpx;
  height: 80rpx;
  width: 80rpx;
  line-height: 80rpx;
  text-align: center;
  border-radius: 50%;
  background: #fff;
  font-weight: normal;
}
.step .s1>view:nth-of-type(2){
  color: #fff;
}
.step>view>view:nth-of-type(1){
  color:#FFE3D2;
  font-size: 48rpx;
  height: 80rpx;
  width: 80rpx;
  line-height: 80rpx;
  text-align: center;
  border-radius: 50%;
  border: 1px solid #FFE3D2;
  font-weight: normal;
}
.step>view>view:nth-of-type(2){
  color: #FFE3D2;
  font-size:22rpx;
}
.main{
  margin-top: -6px;
  background: #F0F0F0;
  padding: 40rpx;
}
.main>view{
  padding: 20rpx;
  background: #fff;
  border-radius: 6rpx;
  margin-bottom: 20rpx;
  display: flex;
}
.main>view>view{
  width: 200rpx;
  height: 52rpx;
  line-height: 52rpx;
  text-align: justify;
  text-align-last: justify;
  font-size: 30rpx;
  color: #8D8D8D;
  margin-right: 20rpx;
}
.main>view>input{
  height: 52rpx;
  line-height: 52rpx;
}




.main .foot{
  padding: 40rpx;
  background: #f0f0f0;
  text-align: center;
}
.foot button{
  background: #4A94FF;
  width:300rpx;
  font-size: 28rpx;
}

