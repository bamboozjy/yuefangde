<!--pages/person/person.wxml-->
<view class='all'>
  <view class='head'>
    <image src='../images/img/111@2x.png'></image>
    <view class='step'>
      <view class='s1'>
        <view>1</view>
        <view>完善信息</view>
      </view>
      <view class='s2'>
        <view>2</view>
        <view>提交审核</view>
      </view>
      <view class='s3'>
        <view>3</view>
        <view>审核通过</view>
      </view>
    </view>
  </view>
  <view class='main'>
    <view class='m1'>
      <view>姓 名:</view>
        <input type="text" placeholder='请输入姓名'  placeholder-class='placeholder'/>
      </view>
      <view class='m2'>
        <view>联系方式:</view>
        <input  type="text" placeholder='请输入联系方式' placeholder-class='placeholder'/>
      </view>
      <view class='m3'>
        <view>性 别:</view>
        <radio-group class="radio-group" bindchange="radioChange">
          <label class="radio">
            <radio value="1" checked="checked"/>男
            <radio value="2"/>女
          </label>
        </radio-group>
      </view>
      <view class='m4'>
        <view>年 龄:</view>
        <input  type="text" placeholder='请输入年 龄' placeholder-class='placeholder'/>
      </view>
      <view class='m5'>
        <view>岗位匹配:</view>
        <input  type="text" placeholder='请输入岗位匹配' placeholder-class='placeholder'/>
      </view>
      <view class='m6'>
        <view>最高学历:</view>
        <input  type="text" placeholder='请输入最高学历' placeholder-class='placeholder'/>
      </view>
      <view class='m7'>
        <view>工作经历:</view>
        <input  type="text" placeholder='请输入工作经历' placeholder-class='placeholder'/>
      </view>
      <view class='m8'>
        <view>期望薪酬:</view>
        <input  type="text" placeholder='请输入期望薪酬' placeholder-class='placeholder'/>
      </view>
      <view class='foot'>
        <button type="primary" bindtap="primary" hover-class="none"> 提交 </button>
      </view>
    </view>
    
  </view>
