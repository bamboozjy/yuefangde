/* pages/group/group.wxss */

.main{
  border-top: 1px solid #ccc;
}
.main>view{
  padding: 5px 10px;
  border-bottom: 1px solid #F4F4F4;
}
.main>view,.main>view>view:nth-of-type(1){
  display: flex;
  justify-content: space-between;
  align-items: center;
}

image{
  width: 55px;
  height: 55px;
  border-radius: 50%;
  margin-right: 10px;
}
.title{
  font-size: 14px ;
  color: #0B0B0B;
}
.add{
  padding: 10px;
  color: #fff;
  background: #4A94FF;
  font-size: 12px;
  border-radius: 3px;
}