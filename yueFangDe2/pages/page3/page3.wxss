.all{
  background: #F4F4F4;
  padding: 0 0 30px 0;
  color: #0C0C0C;
}
.lbt{
  height: 200px; 
  width: 100%;
}
.slide-image{
  width: 100%;
}
.top{
  display: flex;
  justify-content: space-around;
  padding: 20px 0;
  font-size: 12px;
  margin-bottom: 10px;
  background: #fff;
}
.top>view{
  display: flex;
  flex-direction: column;
  /* justify-content: center; */
  align-items: center;
}
.top image{
  width: 30px;
  height: 30px;
  margin-bottom: 5px;
}
.middle-top{
  display: flex;
  justify-content: space-around;
  font-size: 14px;
  background: #fff;
  height: 50px;
  line-height: 50px;
  margin-bottom: 5px;
}


.jishi-content{
  padding: 8px 15px;
}
.jishi-content>view{
  display: flex;
  justify-content: space-between;
}
.jishi-content>view>view{
  position: relative;
  width: 49%;

}
.jishi-content>view>view image{
  width: 100%;
  height: 120px;
}
.jishi-content>view>view text{
  position:absolute;
  left:0; right:0; top:0; bottom:0;
  margin:auto;
  font-size: 15px;
  width: 60%;
  height: 18px;
  color: #fff;
}
.jishi-content>view:nth-of-type(1){
  margin-bottom: 5px;
}


.zixun-content{
  width: 100%;
  background: #fff;
  margin-bottom: 10px;
}
.zixun-content::after{
  content: '';
  display: block;
  clear: both;
}
.zixun-content>view{
  float: left;
  width: 50%;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  align-items: center;
  height: 80px;
  padding: 10px 0;
}
.zixun-content>view:nth-of-type(odd){
  border-right: 1px solid #f4f4f4;
}
.zixun-content>view:nth-of-type(1),.zixun-content>view:nth-of-type(2){
  border-bottom: 1px solid #f4f4f4;
}
.zixun-content>view image{
  width: 30px;
  height: 30px;
}
.zixun-content>view text{
  font-size: 12px;
}


.middle-mid{
  padding: 12px 15px;
  background: #fff;
}
.middle-mid image{
  width: 71px;
  height: 55px;
  margin-right: 20px;
  
}
.middle-mid>view{
  display: flex;
  justify-content: space-between;
  align-items: center;
  overflow: hidden;
}
.middle-mid>view>view{
  display: flex;
  align-items: center;
}
.middle-mid text{
  font-size: 14px;
  
}
.middle-mid .detail{
  padding: 5px 10px;
  border: 1px solid #4A94FF;
  font-size: 13px;
  color: #4A94FF;
  border-radius: 2px;
}
.middle-mid-t{
  border-bottom: 1px solid #f4f4f4;
  padding-bottom: 10px;
}
.middle-mid-b{
  padding-top: 10px;
}
.middle-bot{
  padding: 10px 15px;
  background: #fff;
  margin-top: 6px;
}
.middle-bot-t{
  font-size: 14px;
  padding-bottom: 10px;
  border-bottom: 1px solid #f4f4f4;
}
.middle-bot-t text{
  color: #4A94FF;
  font-weight: 900;
}
.middle-bot-b>view{
  padding: 8px 0;
  border-bottom: 1px solid #f4f4f4;
}
.middle-bot-b>view>view:nth-of-type(1){
  font-size: 13px;
  width: 100%;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
.middle-bot-b>view>view:nth-of-type(2){
  font-size: 10px;
  color: #9A9A9A;
}