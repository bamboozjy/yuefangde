/* pages/hightrain/hightrain.wxss */
.all{
  background:  #F4F4F4;
  height: 100vh;
}
.top{
  width: 100%;
  height: 24vh;
}
.main{
  margin-top: -5px;
  background: #fff;
}
.main>view{
  padding: 5px 10px;
  border-bottom: 1px solid #F4F4F4;
}
.main>view::after{
  content: '';
  display: block;
  clear: both;
}
.main>view image{
  float: left;
  margin-right: 10px;
  width: 25.8vw;
  height: 20.8vw;
}
.main>view>view:nth-of-type(1){
  float: left;
  width: 45vw;
  height: 20.8vw;
}
.main>view>view:nth-of-type(2){
  float: right;
}
.title{
  font-size: 14px ;
  color: #0B0B0B;
  padding: 10px 0;
  overflow:hidden;
  width: 100%;
  text-overflow:ellipsis;
  white-space:nowrap;
}
.con{
  font-size: 12px ;
  color: #999;
}
.add{
  padding: 5px;
  color: #4A94FF;
  font-size: 12px;
  border: 1px solid #4A94FF;
  border-radius: 3px;
  margin-top: 7vw;
}

