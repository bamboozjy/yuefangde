<!--pages/merge/merge.wxml-->
<view class='all'>
  <view class='head'>
    <image src='../images/img/333@2x.png'></image>
    <view class='step'>
      <view class='s1'>
        <view>1</view>
        <view>完善信息</view>
      </view>
      <view class='s2'>
        <view>2</view>
        <view>提交审核</view>
      </view>
      <view class='s3'>
        <view>3</view>
        <view>审核通过</view>
      </view>
    </view>
  </view>
  <view class='main'>
    <view class='m1'>
      <view>姓名:</view>
        <input type="text" placeholder='请输入姓名' placeholder-class='placeholder'/>
      </view>
      <view class='m2'>
        <view>联系方式:</view>
        <input  type="text"  placeholder='请输入联系方式' placeholder-class='placeholder'/>
      </view>
      <view class='m3'>
        <view>拟收购类型:</view>
        <input  type="text"  placeholder='请输入拟收购类型' placeholder-class='placeholder'/>
      </view>
      <view class='m4'>
        <view>收购比例:</view>
        <input  type="text"  placeholder='请输入收购比例' placeholder-class='placeholder'/>
      </view>
      <view class='m5'>
        <view>收购原因:</view>
        <input  type="text"  placeholder='请输入收购原因' placeholder-class='placeholder'/>
      </view>
      <view class='m6'>
        <view>大股东姓名:</view>
        <input  type="text"  placeholder='请输入大股东姓名' placeholder-class='placeholder'/>
      </view>
      <view class='m7'>
        <view>资产实力描述:</view>
        <input  type="text"  placeholder='请输入资产实力描述' placeholder-class='placeholder'/>
      </view>
      <view class='m8'>
        <view>是否具有基金从业资格:</view>
        <radio-group class="radio-group" bindchange="radioChange">
          <label class="radio">
            <radio value="1" checked="checked"/>是
            <radio value="2"/>否
          </label>
        </radio-group>
      </view>
      <view class='foot'>
        <button type="primary" bindtap="primary" hover-class="none"> 提交 </button>
      </view>
    </view>
    
  </view>
